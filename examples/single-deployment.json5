// OpenClaw config snippet for a single Azure OpenAI deployment
// Copy the relevant sections to your ~/.openclaw/config.json5

{
  env: {
    vars: {
      // Required: your Azure OpenAI API key
      AZURE_OPENAI_API_KEY: "your-key-here",
      
      // Required: just the resource name (not the full URL)
      AZURE_OPENAI_RESOURCE_NAME: "your-resource-name",
      
      // Optional: API version (defaults to "v1")
      AZURE_OPENAI_API_VERSION: "2024-02-01",
      
      // Optional: map model IDs to deployment names if they differ
      // AZURE_OPENAI_DEPLOYMENT_NAME_MAP: "gpt-4o=my-deployment-name"
    }
  },

  models: {
    providers: {
      // Provider name - use this as prefix when referencing models
      "azure-openai": {
        // IMPORTANT: Use azure-openai-responses, NOT openai-completions
        // The standard openai-completions breaks with Azure's URL format
        api: "azure-openai-responses",
        
        // Define the model(s) available through this provider
        models: [
          {
            id: "gpt-4o",  // Used for deployment name lookup
            name: "GPT-4o (Azure)",
            contextWindow: 128000,
            maxTokens: 16384,
            input: ["text", "image"],
            // Optional: pricing for cost tracking
            cost: {
              input: 2.50,    // $ per 1M input tokens
              output: 10.00   // $ per 1M output tokens
            }
          }
        ]
      }
    }
  },

  agents: {
    defaults: {
      model: {
        // Reference format: provider-name/model-id
        primary: "azure-openai/gpt-4o"
      }
    }
  }
}
