// OpenClaw config snippet for multiple Azure OpenAI deployments
// Useful when you have different models deployed (GPT-4o, GPT-4o-mini, o1, etc.)

{
  env: {
    vars: {
      // All deployments share credentials from the same Azure resource
      AZURE_OPENAI_API_KEY: "your-key-here",
      AZURE_OPENAI_RESOURCE_NAME: "my-openai-resource",
      AZURE_OPENAI_API_VERSION: "2024-02-01",
      
      // Map model IDs to your Azure deployment names
      // Format: modelId=deploymentName,modelId2=deploymentName2
      AZURE_OPENAI_DEPLOYMENT_NAME_MAP: "gpt-4o=gpt4o-prod,gpt-4o-mini=mini-prod,o1=o1-preview-deployment"
    }
  },

  models: {
    providers: {
      "azure": {
        api: "azure-openai-responses",
        models: [
          // GPT-4o (main model)
          {
            id: "gpt-4o",
            name: "GPT-4o (Azure)",
            contextWindow: 128000,
            maxTokens: 16384,
            input: ["text", "image"],
            cost: { input: 2.50, output: 10.00 }
          },
          
          // GPT-4o-mini (faster/cheaper)
          {
            id: "gpt-4o-mini",
            name: "GPT-4o Mini (Azure)",
            contextWindow: 128000,
            maxTokens: 16384,
            input: ["text", "image"],
            cost: { input: 0.15, output: 0.60 }
          },
          
          // o1 reasoning model (if you have access)
          {
            id: "o1",
            name: "o1 (Azure)",
            contextWindow: 200000,
            maxTokens: 100000,
            input: ["text", "image"],
            reasoning: true,  // Enable reasoning mode
            cost: { input: 15.00, output: 60.00 }
          }
        ]
      }
    }
  },

  agents: {
    defaults: {
      model: {
        // Use GPT-4o as primary
        primary: "azure/gpt-4o",
        // Fall back to mini if 4o fails
        fallbacks: ["azure/gpt-4o-mini"]
      }
    }
  }
}
